{
  "name": "lama-ui",
  "version": "1.0.0",
  "description": "LAMA Desktop with shadcn/ui",
  "type": "module",
  "scripts": {
    "dev": "vite",
    "build": "vite build",
    "build:nocheck": "vite build",
    "build:test": "npm run test:ci && npm run build",
    "preview": "vite preview",
    "electron": "npm run build && cd .. && electron lama-electron-shadcn.js",
    "electron:test": "npm run build:test && electron ../lama-electron.js",
    "test": "jest --config jest.config.cjs --passWithNoTests",
    "test:watch": "jest --config jest.config.cjs --watch",
    "test:coverage": "jest --config jest.config.cjs --coverage",
    "test:unit": "jest tests/unit --config jest.config.cjs",
    "test:integration": "jest tests/integration --config jest.config.cjs",
    "test:ci": "jest --config jest.config.cjs --ci --coverage --maxWorkers=2 --passWithNoTests",
    "lint": "eslint src --ext .ts,.tsx",
    "lint:fix": "eslint src --ext .ts,.tsx --fix",
    "typecheck": "tsc --noEmit",
    "precommit": "npm run lint && npm run typecheck && npm run test:ci",
    "ci": "npm run lint && npm run typecheck && npm run test:ci && npm run build",
    "prepare": "husky"
  },
  "dependencies": {
    "@anthropic-ai/sdk": "^0.59.0",
    "@modelcontextprotocol/sdk": "^1.17.2",
    "@radix-ui/react-alert-dialog": "^1.1.14",
    "@radix-ui/react-avatar": "^1.0.4",
    "@radix-ui/react-checkbox": "^1.3.2",
    "@radix-ui/react-dialog": "^1.1.14",
    "@radix-ui/react-dropdown-menu": "^2.1.15",
    "@radix-ui/react-icons": "^1.3.2",
    "@radix-ui/react-progress": "^1.1.7",
    "@radix-ui/react-scroll-area": "^1.0.5",
    "@radix-ui/react-separator": "^1.0.3",
    "@radix-ui/react-slot": "^1.0.2",
    "@radix-ui/react-tabs": "^1.1.12",
    "@refinio/one.core": "file:../vendor/refinio-one.core-0.6.1-beta-2.tgz",
    "@refinio/one.models": "file:../vendor/refinio-one.models-14.1.0-beta-4.tgz",
    "@types/qrcode.react": "^1.0.5",
    "buffer": "^6.0.3",
    "class-variance-authority": "^0.7.0",
    "clsx": "^2.0.0",
    "crypto-browserify": "^3.12.0",
    "events": "^3.3.0",
    "lucide-react": "^0.294.0",
    "path-browserify": "^1.0.1",
    "process": "^0.11.10",
    "qrcode.react": "^4.2.0",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "react-markdown": "^10.1.0",
    "remark-gfm": "^4.0.1",
    "stream-browserify": "^3.0.0",
    "tailwind-merge": "^2.2.0",
    "tailwindcss-animate": "^1.0.7"
  },
  "devDependencies": {
    "@esbuild-plugins/node-globals-polyfill": "^0.2.3",
    "@esbuild-plugins/node-modules-polyfill": "^0.2.2",
    "@testing-library/jest-dom": "^6.1.5",
    "@testing-library/react": "^14.1.2",
    "@testing-library/user-event": "^14.5.1",
    "@types/jest": "^29.5.11",
    "@types/react": "^18.2.43",
    "@types/react-dom": "^18.2.17",
    "@typescript-eslint/eslint-plugin": "^6.14.0",
    "@typescript-eslint/parser": "^6.14.0",
    "@vitejs/plugin-react": "^4.2.1",
    "autoprefixer": "^10.4.16",
    "eslint": "^8.55.0",
    "eslint-plugin-react-hooks": "^4.6.0",
    "eslint-plugin-react-refresh": "^0.4.5",
    "husky": "^9.1.7",
    "identity-obj-proxy": "^3.0.0",
    "jest": "^29.7.0",
    "jest-environment-jsdom": "^29.7.0",
    "lint-staged": "^16.1.4",
    "postcss": "^8.4.32",
    "tailwindcss": "^3.4.0",
    "ts-jest": "^29.1.1",
    "typescript": "^5.2.2",
    "vite": "^5.0.8",
    "vite-plugin-node-polyfills": "^0.24.0"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "*.{ts,tsx}": [
      "eslint --fix",
      "jest --bail --findRelatedTests --config jest.config.cjs"
    ],
    "*.{json,md,yml}": [
      "prettier --write"
    ]
  }
}
