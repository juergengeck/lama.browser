{
  "name": "lama",
  "version": "1.0.0",
  "private": true,
  "main": "lama-electron-shadcn.js",
  "scripts": {
    "electron": "NODE_ENV=development electron lama-electron-shadcn.js",
    "dev": "cd electron-ui && npm run dev",
    "build": "cd electron-ui && npm run build",
    "build:ui": "npm run build --prefix electron-ui",
